@model UserLoginVM

<div class="dropdown-menu">
    <form class="px-4 py-3" asp-controller="user" asp-action="login">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input type="email" class="form-control" id="exampleDropdownFormEmail1" placeholder="email@example.com" asp-for="Username" />
            <span asp-validation-for="Username"></span>

        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" id="exampleDropdownFormPassword1" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="dropdownCheck">
            <label class="form-check-label" for="dropdownCheck">
                Kom ihåg mig
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Logga in</button>
    </form>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" asp-controller="user" asp-action="Signup">Registrera</a>
    <a class="dropdown-item" href="#">Forgot password?</a>
</div>
