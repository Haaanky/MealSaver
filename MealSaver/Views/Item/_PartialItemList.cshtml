@model ItemDisplayVM[]
@*@{
        ViewData["Title"] = "_PartialItemList";
        Layout = "_UserLayout";
    }*@

<div class="text-lg-center container">
    <h2>Så här mycket har du slängt den senaste veckan:</h2>
    <ul>
        @foreach (var item in Model)
        {
            <li>@item.Type, @item.AmountKg Kg, borttaget @item.Date</li>
        }
    </ul>
</div>

<canvas id="myChart" width="400" height="400"></canvas>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.js"></script>
<script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Red', 'Blue'],

                @*labels: [@foreach (var item in Model)
                {
                    @("'" + item.Type + "'" + ", ")
                }],*@
                datasets: [{
                    label: '# of Votes',
                    //data: [12, 19],

                    data: [@foreach (var item in Model)
	{
		 @(item.AmountKg*10 + ", ")
	}],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
</script>